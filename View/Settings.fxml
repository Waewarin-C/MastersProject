        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="saveSettingsButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#saveSettings" prefWidth="65.0" text="Save">
               <font>
                  <Font name="Segoe UI Semibold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelSettingsButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cancelSettings" prefWidth="65.0" text="Cancel" GridPane.columnIndex="1">
               <font>
                  <Font name="Segoe UI Semibold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
